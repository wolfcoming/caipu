<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:contentPaddingBottom="8dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                tools:srcCompat="@tools:sample/avatars[0]"
                android:id="@+id/ivHeader"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:lines="1"
                android:ellipsize="end"
                android:textSize="24sp"
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvUser"
                app:layout_constraintStart_toEndOf="@+id/ivHeader"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@+id/ivHeader"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:lines="1"
                android:ellipsize="end"
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitle"
                app:layout_constraintStart_toEndOf="@+id/ivHeader"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivHeader"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:maxLines="2"
                android:ellipsize="end"
                android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvContent"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="@+id/ivHeader"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>


        <com.example.kaiyan.widget.media.IjkVideoView

                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvContent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:id="@+id/mVideo"></com.example.kaiyan.widget.media.IjkVideoView>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>