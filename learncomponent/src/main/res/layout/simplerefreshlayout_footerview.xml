<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

    <ImageView
            android:rotation="180"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_refresh_arrow"
            android:id="@+id/refresh_iv_footer_arrow"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="上拉加载更多"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refresh_tv_footer_content"
            app:layout_constraintTop_toTopOf="@+id/refresh_iv_footer_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/refresh_iv_footer_arrow"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>